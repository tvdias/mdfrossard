<article id="<%= post.layout %>-<%= post.id %>" class="l-light <%= post.layout %>-<%= post.id %> <%= post.layout %> type-<%= post.layout %>-<%= post.id %> status-publish format-standard has-post-thumbnail hentry category-sem-categoria" itemscope itemprop="blogPost">
  <header>
    <%- partial('post/title', {class_name: 'article-title'}) %>
    <div>Por <%= post.author && post.author.lenght > 0 ? post.author : config.author %></div>
    <%- partial('post/featured_image') %>
  </header>
  <div class="post-content article-inner" itemprop="articleBody">
    <% if (post.excerpt && index){ %>
      <p><%- post.excerpt %>... </p>
      <% if (theme.excerpt_link){ %>
      <a href="<%- url_for(post.path) %>#more" class="more" title="<%= post.title %>"><%= theme.excerpt_link %></a>
      <% } %>
    <% } else { %>
      <%- post.content %>
    <% } %>
  </div>
  <footer class="post-footer">
    <% if (!index){ %>
      <%- partial('sliders/consulta') %>
      <%- partial('post/share') %>
      <%- partial('post/author') %>
    <% } %>
    <% if (!index && post.comments && config.disqus_shortname){ %>
      <section id="comments">
        <div id="disqus_thread">
          <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
        </div>
      </section>
      <% } %>
  </footer>
</article>